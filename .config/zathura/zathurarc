set notification-bg             "#323D43"
set notification-fg             "#D8CAAC"

set notification-error-bg       "#323D43"
set notification-error-fg       "#E68183"

set notification-warning-bg     "#323D43"
set notification-warning-fg     "#E68183"

set highlight-color             "#D9BB80"
